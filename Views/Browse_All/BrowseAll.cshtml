                            {
                                <img class="slide-image" src="~/Content/images/vd.png" alt="">
                            }
                            else if (ViewBag.entityType == "songs")
                            {
                                <img class="slide-image" src="~/Content/images/enri.jpg" alt="">
                            }
                            else
                            {
                                <img class="slide-image" src="~/Content/images/call.jpg" alt="">
                            }
                        </div>
                        <div class="item">
                            @if (ViewBag.entityType == "movies")
                            {
                                <img class="slide-image" src="~/Content/images/steel.jpg" alt="">
                            }
