            @{
                    
                   
                    foreach(var x in ViewBag.categories)
                    {
                        string myUrl = "/Browse_All/BrowseAll?entityType="+ ViewBag.entityType + "&genre=" + x.genre.Trim();
                         if(ViewBag.genre==x.genre.Trim())
                        { 
                             <li class="active"><a href="@Url.Content(myUrl)">@x.genre.Trim()</a></li>
                        }
                        else
                        { <li><a href="@Url.Content(myUrl)">@x.genre.Trim()</a></li>
                        }
                    }
                
            }
        </ul>


    </div>


